datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id 
  username      String   @unique
  email         String   @unique
  passwordHash  String
  fullName      String
  bio           String?
  profilePic    String?
  createdAt     DateTime @default(now())
  sessions     Session[]
  provider      Provider @default(MANUAL)
  providerId    String?  
  socialLinks   Json?    
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum Provider {
  MANUAL
  GOOGLE
  FACEBOOK
  X
  INSTAGRAM
  LINKEDIN
}
